{
  "name": "markdown-blog",
  "version": "1.0.0",
  "description": "A static blog system based on Markdown with GitHub Pages deployment",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "tsc && node scripts/build.js",
    "preview": "node scripts/preview.js",
    "pre": "node scripts/preview.js",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.{ts,js,json,css,html}",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "npm run build && npm run deploy:gh-pages",
    "deploy:gh-pages": "gh-pages -d dist"
  },
  "keywords": [
    "markdown",
    "blog",
    "static-site-generator",
    "github-pages",
    "vite",
    "typescript",
    "tailwindcss"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/markdown-blog.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/markdown-blog/issues"
  },
  "homepage": "https://yourusername.github.io/markdown-blog/",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "markdown-it": "^13.0.2",
    "gray-matter": "^4.0.3",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "feed": "^4.2.2",
    "sitemap": "^7.1.1",
    "prismjs": "^1.29.0",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-task-lists": "^2.1.1",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-ins": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-deflist": "^2.1.0",
    "markdown-it-container": "^3.0.0",
    "markdown-it-emoji": "^2.0.2",
    "js-yaml": "^4.1.0",
    "dayjs": "^1.11.10",
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "commander": "^11.1.0",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "fs-extra": "^11.1.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "tailwindcss": "^3.3.5",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "nodemon": "^3.0.1",
    "gh-pages": "^6.0.0",
    "concurrently": "^8.2.1"
  }
}
