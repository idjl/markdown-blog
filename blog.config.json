{
  "title": "My Static Blog",
  "description": "A beautiful blog built with TypeScript and Markdown",
  "author": "Your Name",
  "siteUrl": "https://yourusername.github.io",
  "postsPerPage": 10,
  "theme": {
    "primaryColor": "#3b82f6",
    "accentColor": "#1d4ed8",
    "darkMode": true
  },
  "features": {
    "comments": {
      "enabled": true,
      "provider": "utterances",
      "config": {
        "repo": "yourusername/your-repo-name",
        "theme": "github-light",
        "crossorigin": "anonymous"
      }
    },
    "search": {
      "enabled": true,
      "placeholder": "Search posts..."
    },
    "syntaxHighlight": {
      "enabled": true,
      "theme": "prism-tomorrow"
    },
    "rss": {
      "enabled": true,
      "filename": "feed.xml"
    },
    "sitemap": {
      "enabled": true,
      "filename": "sitemap.xml"
    }
  },
  "social": {
    "github": "yourusername",
    "twitter": "yourusername",
    "linkedin": "yourusername",
    "email": "your.email@example.com"
  },
  "navigation": [
    { "name": "Home", "url": "/" },
    { "name": "About", "url": "/about.html" },
    { "name": "Categories", "url": "/categories/" },
    { "name": "Tags", "url": "/tags/" },
    { "name": "Archive", "url": "/archive/" }
  ]
}